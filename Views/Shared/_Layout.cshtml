<!DOCTYPE html>
<html lang="mr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - गौमाता डेरी</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Devanagari:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        .marathi-font {
            font-family: 'Noto Sans Devanagari', sans-serif;
        }

        .hamburger div {
            width: 25px;
            height: 3px;
            background-color: #16A34A;
            margin: 4px 0;
            transition: 0.4s;
        }

        .hamburger.open div:nth-child(1) {
            transform: rotate(-45deg) translate(-5px, 6px);
        }

        .hamburger.open div:nth-child(2) {
            opacity: 0;
        }

        .hamburger.open div:nth-child(3) {
            transform: rotate(45deg) translate(-5px, -6px);
        }

        .btn-wave {
            position: relative;
            overflow: hidden;
        }

            .btn-wave::after {
                content: "";
                position: absolute;
                height: 100%;
                width: 100%;
                background: rgba(255, 255, 255, 0.2);
                top: 0;
                left: -100%;
                transition: left 0.5s ease;
                border-radius: inherit;
                z-index: 0;
            }

            .btn-wave:hover::after {
                left: 0;
            }

            .btn-wave span {
                position: relative;
                z-index: 1;
            }

        .floating-cart {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 50;
            background: linear-gradient(135deg, #16A34A, #22C55E);
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .fade-in-up {
            animation: fadeInUp 0.8s ease forwards;
            opacity: 0;
        }

        html {
            scroll-behavior: smooth;
        }

        .gradient-bg {
            background: linear-gradient(135deg, #16A34A, #22C55E, #84CC16);
        }
    </style>
</head>
<body class="bg-gray-50 font-sans">
    <nav class="bg-white shadow-lg sticky top-0 z-40 border-b border-green-100">
        <div class="container mx-auto flex justify-between items-center px-6 py-4">
            <a href="@Url.Action("Index", "Home")" class="flex items-center space-x-3 font-bold text-green-700 text-2xl select-text">
                <div class="w-10 h-10 bg-green-600 rounded-full flex items-center justify-center">
                    <span class="text-white text-lg marathi-font">गौ</span>
                </div>
                <span class="marathi-font">गौमाता डेरी</span>
            </a>

            <div class="hidden md:flex space-x-8 text-green-700 font-semibold text-lg select-text">
                <a href="#hero" class="hover:text-green-800 transition duration-300 marathi-font">Home</a>
                <a href="#products" class="hover:text-green-800 transition duration-300 marathi-font">Products</a>
                <a href="#aboutUs" class="hover:text-green-800 transition duration-300 marathi-font">About </a>
                <a href="#contact" class="hover:text-green-800 transition duration-300 marathi-font">Contact us</a>
            </div>

            <button id="mobileMenuBtn" class="md:hidden flex flex-col hamburger cursor-pointer p-2" type="button">
                <div></div><div></div><div></div>
            </button>
        </div>

        <div id="mobileMenu" class="hidden md:hidden bg-white border-t shadow-inner">
            <a href="#hero" class="block py-4 px-6 border-b border-green-100 text-green-700 font-semibold hover:bg-green-50 marathi-font">Home</a>
            <a href="#products" class="block py-4 px-6 border-b border-green-100 text-green-700 font-semibold hover:bg-green-50 marathi-font">Products</a>
            <a href="#aboutUs" class="block py-4 px-6 border-b border-green-100 text-green-700 font-semibold hover:bg-green-50 marathi-font">About</a>
            <a href="#contact" class="block py-4 px-6 text-green-700 font-semibold hover:bg-green-50 marathi-font">Contact us</a>
        </div>
    </nav>

    <div id="cartCounter" class="floating-cart px-4 py-3 rounded-full shadow-lg text-white font-bold cursor-pointer hidden" onclick="window.location.href='@Url.Action("Cart", "Products")'">
        <span class="marathi-font">🛒 कार्ट</span>
        <span id="cartCount" class="ml-2 bg-white text-green-600 rounded-full px-2 py-1 text-sm">0</span>
    </div>

    <main>
        @RenderBody()
    </main>

    <footer class="gradient-bg text-white py-12 mt-16">
        <div class="container mx-auto px-6 text-center">
            <div class="mb-8">
                <h3 class="text-2xl font-bold marathi-font mb-4">गौमाता डेरी</h3>
                <p class="text-green-100 marathi-font">शुद्ध दूध, थेट स्रोतापासून</p>
            </div>
            <div class="border-t border-green-400 pt-6">
                <p class="text-green-100 marathi-font">&copy; २०२५ गौमाता डेरी. सर्व हक्क राखीव.</p>
            </div>
        </div>
    </footer>

    <script>
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');

        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            mobileMenuBtn.classList.toggle('open');
        });

        mobileMenu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
                mobileMenuBtn.classList.remove('open');
            });
        });

        // Cart counter update
        function updateCartCounter() {
            fetch('@Url.Action("GetCartCount", "Products")')
                .then(response => response.json())
                .then(data => {
                    const counter = document.getElementById('cartCounter');
                    const count = document.getElementById('cartCount');
                    if (data.count > 0) {
                        counter.classList.remove('hidden');
                        count.textContent = data.count;
                    } else {
                        counter.classList.add('hidden');
                    }
                });
        }
        updateCartCounter();

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
</body>
</html>
